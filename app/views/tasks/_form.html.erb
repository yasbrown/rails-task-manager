<%= form_with model: @task, class:"form-group border-bottom pt-4 pb-5"  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details, class: "mt-4" %>
  <%= f.text_field :details, class: "form-control" %>
  <% unless f.object.new_record? %>
    <label class="completed-tag">
      <%= f.check_box :completed %>Completed?
    </label>
  <% end %>
  <%= f.submit class: "btn btn-outline-info mt-4" %>
<% end %>
